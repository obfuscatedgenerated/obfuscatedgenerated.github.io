{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2019",
    "module": "ES2020",
    "outDir": "public/script",
    "typeRoots": [
      "./declarations",
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "public/script",
    "webpack.config.js",
    "server.js"
  ]
}